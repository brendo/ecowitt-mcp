{
  "name": "ecowitt-mcp",
  "version": "0.0.1-dev",
  "description": "MCP server for Ecowitt Weather API v3 integration",
  "type": "module",
  "main": "server/index.js",
  "bin": {
    "ecowitt-mcp": "./server/index.js"
  },
  "scripts": {
    "start": "node --env-file=.env server/index.js",
    "dev": "node --env-file=.env --watch server/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && vitest run"
  },
  "keywords": [
    "mcp",
    "ecowitt",
    "weather",
    "api",
    "weather-station",
    "message-control-protocol"
  ],
  "author": "Brendan Abbott",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendo/ecowitt-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/brendo/ecowitt-mcp/issues"
  },
  "homepage": "https://github.com/brendo/ecowitt-mcp#readme"
}
