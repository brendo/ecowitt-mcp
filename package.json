{
  "name": "ecowitt-mcp",
  "version": "0.0.1-dev",
  "description": "MCP server for Ecowitt Weather API v3 integration",
  "type": "module",
  "main": "src/server/index.js",
  "bin": {
    "ecowitt-mcp": "./src/server/index.js"
  },
  "scripts": {
    "start": "node --env-file=.env src/server/index.js",
    "dev": "node --env-file=.env --watch src/server/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write . && vitest run"
  },
  "keywords": [
    "mcp",
    "ecowitt",
    "weather",
    "api",
    "weather-station"
  ],
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "author": "Brendan Abbott",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "vitest": "^3.2.4",
    "vitest-fetch-mock": "^0.4.5"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendo/ecowitt-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/brendo/ecowitt-mcp/issues"
  },
  "homepage": "https://github.com/brendo/ecowitt-mcp#readme"
}
